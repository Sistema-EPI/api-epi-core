{
  "name": "api-epi-core",
  "version": "0.0.1",
  "scripts": {
    "clear": "rimraf dist",
    "clear:prod": "rm -rf dist",
    "build": "npm run clear:prod && tsc",
    "build-local": "npm run clear && tsc",
    "dev": "tsx watch --inspect src/server.ts",
    "test": "npm run clear && tsc && node --test tests/index.test.mjs",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "code:check": "npm run typecheck && npm run lint && npm run format:check",
    "code:fix": "npm run lint:fix && npm run format",
    "prepare": "husky"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts",
    "seed-prd": "tsx prisma/seed-prd.ts"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^8.0.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "prisma": "^6.7.0",
    "rate-limiter-flexible": "^7.1.1",
    "swagger-jsdoc": "^7.0.0-rc.6",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.24.3"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
